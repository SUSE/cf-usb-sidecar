FROM catalog-service-manager:build

COPY . /go/src/github.com/hpcloud/catalog-service-manager/csm-extensions/services/dev-mongo
ENV GOPATH /go
ENV GOBIN /go/bin
WORKDIR /go/src/github.com/hpcloud/catalog-service-manager/csm-extensions/services/dev-mongo

RUN make tools
RUN make build
RUN cp -r /go/src/github.com/hpcloud/catalog-service-manager/csm-extensions/services/dev-mongo/CSM_HOME /

ENTRYPOINT ["/bin/sh","-c"]